<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>

<%= form_for @user do |f| %>

    <div class="form-group">
      <%= f.label t('user.forename') %>
      <%= f.text_field :forename%>

      <%= f.label t('user.surname') %>
      <%= f.text_field :surname %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: t('activerecord.attributes.user.email'), class: 'form-control input', title: t('activerecord.attributes.user.email') %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password,
                           placeholder: @user.new_record? ? t('activerecord.attributes.user.password_placeholder') : t('users.edit.new_password'),
                           class: 'form-control input',
                           title: @user.new_record? ? t('activerecord.attributes.user.password_help') : t('users.edit.new_password') %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'sr-only' %>
      <%= f.password_field :password_confirmation,
                           placeholder: @user.new_record? ? t('activerecord.attributes.user.password_confirmation_placeholder') : t('users.edit.new_password_confirmation'),
                           class: 'form-control input',
                           title: @user.new_record? ? t('activerecord.attributes.user.password_confirmation_help') : t('users.edit.new_password_confirmation') %>
    </div>



    <div class="form-group form-button text-center">
      <%= f.submit class: "button" %>
    </div>
<% end %>
